@import '../../utils/font/iconfont.wxss';
/* index.wxss */
page{
  background-color:#efeff4;
}
.head{
  width:100%;
  height:150rpx;
  background-color: #f0eff5;
  position: fixed;
  z-index:999;
}
input{
  width:66%;
  height:60rpx;
  margin-top:7rpx;
  position: relative;
  float:left;
  margin-left:40rpx;
  background-color: #FFFFFF;
}
.placeholder{
  font-size: small;
  text-indent:10rpx;
}
.search-coin{
  float: left;
  position: relative;
  height:77rpx;
  background-color: #FFFFFF;
  width:10%;
}
.item{
  width:96%;
  height:100px;
  background-color: #FFFFFF;
  position: relative;
  left: 2%;
  border-bottom: 1px #e0e0e0 solid;
}
.item-img{
  width:90px;
  height:90%;
  margin-left:10rpx;
  position: relative;
  float: left;
  top:5%;
}
.item-continer{
  float: left;
  position: relative;
  top:5%;
  width:70%;
  height:90%;
  font-size: large;
  font-weight: bolder;
  left:10px;
}
.item-title{
  width:100%;
  height:60%;
  top:10px;
  position: relative;
  font-size:medium;
  color: #333333;
}
.item-context{
  width:100%;
  top:10px;
  position:relative;
  font-size: small;
  color:  #656565;
  font-weight:0px;
}
.detail_item{
  position: relative;
  top:175rpx;
}
.nav_item{
  width:16%;
  color: #302f35;
  height:100%;
  line-height:77rpx;
  float:left;
  text-align: center;
  
}
.nav{
  width:100%;
  height:85rpx;
  padding:1px 1px 1px 1px;
  background-color:  #efeff4;
  float:left;
}
.nodata{
  max-width:40%;
  margin-left:30%;
}
.navitem{
  width:20%;
  height:100%;
  text-align: left;
  line-height:77rpx;
  float: left;
  font-size:25rpx;
  padding-left:20rpx;
}
.navitem text{
  padding-left:90rpx;
  font-size:25rpx;
  display:block;
  margin-top:-50rpx;
  color:  #e0e0e0; 
}
.search-coin{
  float: left;
  position: relative;
  top:7rpx;
  height:60rpx;
  line-height:60rpx;
  background-color: #FFFFFF;
  width:7%;
  color: #25C4A4;
}
.nav .selecter{
  font-size:25rpx;
  color: #999999; 
  text-align: center;
  width:49.5%;
  height:100%;
  float: left;
  line-height:70rpx;
}
.nav .selecter text{
  font-size:22rpx;
  padding-left:15rpx;
}
.line{
  height:60%;
  width:1rpx;
  float:left;
  margin-top:15rpx;
  border-right:1rpx solid #e0e0e0;
}
.inputBox{
  margin-top:10rpx;
}
.selectPanel{
  width:100%;
  height:500rpx;
  background-color: #FFF;
  position: fixed;
  z-index:9999;
  float: left;
  margin-top:162rpx;
  border-top:1rpx solid #e0e0e0 ;
}
.nav .selected{
  color: #25C4A4 !important;
}
.shopType{
  width:100%;
}
.shopType .name{
  width:31%;
  margin-left:1%;
  margin-top:10rpx; 
  height:70rpx;
  line-height:70rpx;
  text-align: center;
  border:1rpx solid #e0e0e0;
  float: left;
  font-size:30rpx;
  color: #999999;
}
.shopType .selected{
  color: #25C4A4 !important;
}
.distance{
  width:100%;
  height:60rpx;
  border-bottom:1rpx solid #f0eff5;
  font-size:30rpx;
  padding-left:20rpx;
  padding-top:20rpx;
}
.mask{
  width:100%;
  background-color: #000000;
  opacity: 0.5;
  height:100vh;
  z-index:99;
  position: fixed;
  display:none;
  
}