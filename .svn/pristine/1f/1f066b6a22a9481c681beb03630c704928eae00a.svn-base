/* index.wxss */
.head{
  width:100%;
  height:150rpx;
  background-color: #f0eff5;
  position: fixed;
  z-index:999;
}
input{
  width:65%;
  height:55rpx;
  top:20rpx;
  margin-right:26rpx;
  position: relative;
  float:right;
  background-color: #FFFFFF;
  
}
.placeholder{
  font-size: small;
}
.search-coin{
  float: right;
  position: relative;
  top:20rpx;
  height:55rpx;
  background-color: #FFFFFF;
  width:7%;
}
picker{
  float: left;
  font-weight:  bold;
}
.item{
  width:90%;
  height:100px;
  position: relative;
  left: 5%;
  border-bottom: 1px #e0e0e0 solid;
}
.item-img{
  width:80px;
  height:80%;
  position: relative;
  float: left;
  top:10%;
}
.item-continer{
  float: left;
  position: relative;
  top:5%;
  width:130px;
  height:90%;
  font-size: large;
  font-weight: bolder;
  left:10px;
}
.item-title{
  width:100%;
  height:40%;
  top:10px;
  position: relative;
  font-size:medium;
  color: #333333;
}
.item-context{
  top:10px;
  position:relative;
  font-size: small;
  color:  #656565;
  font-weight:0px;
}
.item-money{
  line-height:90px;
  font-size: smaller;
  color:#ff7e00;
  width:60px;
  height:90%;
  float: left;
  position: relative;
  top: 5%;
  left:15px;
}
.detail_item{
  position: relative;
  top:180rpx;
}
.nav_item{
  width:16%;
  color: #302f35;
  height:100%;
  line-height:77rpx;
  float:left;
  text-align: center;
  
}
.nav_item2{
  width:16%;
  color: #17b990;
  height:100%;
  line-height:77rpx;
  float:left;
  text-align: center;
  border-bottom: 6rpx #17b990 solid;
}
.nav{
  width:100%;
  height:77rpx;
  margin-top:35rpx;
  float:left;
  background-color:  #FFFFFF;
}
.nodata{
  max-width:40%;
  margin-left:30%;
}